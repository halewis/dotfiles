# i3status configuration file
# See "man i3status" for documentation

general {
	output_format = "i3bar"
	colors = false
	# Refresh interval in seconds
	interval = 5
}

# Items to display
order += "wireless wlp1s0"
order += "battery 0"
order += "tztime local"

# Configure items
wireless wlp1s0 {
	format_up = "%quality at %essid, %ip"
	format_down = "Wireless down"
	color_good = "#a3be8c"
	color_degraded = "#eff1f5"
	color_bad = "#bf616a"
}

battery 0 {
	format = "%status %percentage %remaining"
	color_good = "#a3be8c"
	color_degraded = "#eff1f5"
	color_bad = "#bf616a"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}
